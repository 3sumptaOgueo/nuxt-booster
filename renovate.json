{
  "extends": [
    "@nuxtjs"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "@nuxt/image"
      ],
      "groupName": "@nuxt/image"
    },
    {
      "packageNames": [
        "node"
      ],
      "major": {
        "enabled": true
      },
      "separateMultipleMajor": true,
      "allowedVersions": "^16"
    },
    {
      "matchPackagePatterns": [
        "@nuxtjs/eslint-module",
        "@nuxtjs/stylelint-module"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "matchBaseBranches": [
        "stable"
      ],
      "enabled": false
    }
  ],
  "baseBranches": [
    "main"
  ],
  "rangeStrategy": "pin"
}
